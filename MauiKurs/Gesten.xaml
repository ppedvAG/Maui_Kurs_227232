<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiKurs.Gesten"
             Title="Gesten">
    <VerticalStackLayout>
        <Label Text="Tap Me" Margin="10">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"
                                      NumberOfTapsRequired="2"/>
            </Label.GestureRecognizers>
        </Label>
        
        <Label BackgroundColor="Red" Text="HALLO" FontSize="30" WidthRequest="300" HorizontalOptions="Center" HeightRequest="100">
            <Label.GestureRecognizers>
                <DragGestureRecognizer DragStarting="DragGestureRecognizer_DragStarting"/>
            </Label.GestureRecognizers>
        </Label>
        <Label BackgroundColor="Blue" FontSize="30" WidthRequest="300" HorizontalOptions="Center" HeightRequest="100">
            <Label.GestureRecognizers>
                <DropGestureRecognizer Drop="DropGestureRecognizer_Drop"/>
            </Label.GestureRecognizers>
        </Label>
    </VerticalStackLayout>
</ContentPage>